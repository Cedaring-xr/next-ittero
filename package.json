{
  "name": "next-ittero",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test -c playwright.config.ts",
    "test:api": "playwright test --project=api",
    "test:component": "playwright test -c playwright-ct.config.ts",
    "test:smoke": "playwright test -c playwright.config.ts --grep @smoke",
    "test:regression": "playwright test -c playwright.config.ts --grep @regression",
    "test:a11y": "playwright test -c playwright.config.ts --grep @a11y",
    "test:a11y-full": "playwright test -c playwright.config.ts --grep @a11y-full",
    "test:all": "npm run test:unit:run && npm run test:component && npm run test:e2e",
    "test:generate-results": "tsx scripts/generate-test-results.ts",
    "test:compile-cases": "tsx scripts/compile-test-cases.ts",
    "deploy:staging": "npx sst@2 deploy --stage staging --no-interactive",
    "deploy:prod": "npx sst@2 deploy --stage prod --no-interactive"
  },
  "dependencies": {
    "@aws-amplify/adapter-nextjs": "^1.5.8",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/config-array": "^0.21.1",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query": "^4.42.0",
    "aws-amplify": "^6.14.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "lru-cache": "^10.2.0",
    "next": "^14.2.33",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.65.0",
    "react-icons": "^5.5.0",
    "recharts": "^3.6.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.965.0",
    "@axe-core/playwright": "^4.11.0",
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jsdom": "^27.4.0",
    "postcss": "^8",
    "sst": "^2.49.6",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  }
}
